{
  "name": "collections-ui-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.3.1",
    "chalk": "^2.4.2",
    "collections-ui-common": "file:../collections-ui-common",
    "firebase": "^6.3.3",
    "fs-extra": "^8.1.0",
    "manifest-viewer": "file:../manifest-viewer",
    "@material-ui/core": "^4.3.0",
    "object-assign": "4.1.1",
    "promise": "^8.0.3",
    "react": "^16.8.6",
    "react-burger-menu": "^2.6.10",
    "react-dev-utils": "^9.0.1",
    "react-dom": "^16.8.6",
    "react-firebaseui": "^3.1.2",
    "react-gtm-module": "^2.0.7",
    "react-head": "3.1.1",
    "react-intersection-observer": "^8.24.1",
    "react-loadable": "^5.5.0",
    "react-markdown": "^4.1.0",
    "react-router-dom": "^5.0.1",
    "searchkit": "^2.3.1-alpha.9",
    "whatwg-fetch": "^3.0.0"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "lint": "eslint src"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
