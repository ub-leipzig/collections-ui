    "eslint-loader": "^2.1.1",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
